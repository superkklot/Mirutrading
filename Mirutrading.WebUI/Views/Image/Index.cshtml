@model List<Mirutrading.Application.ViewModel.Admin.ImageRequest>
@{
	ViewBag.Title = "图片处理";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="add_image">添加图像</a>
<table class="table table-striped table-condensed table-hover">
	<thead>
		<tr><th>产品</th><th>高度</th><th>宽度</th><th>链接</th><th>创建时间</th><th>修改时间</th><th>操作</th></tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr id="@item._id">
				<td class="item_type">@item.ProductId</td>
				<td class="item_name">@item.Width</td>
				<td class="item_price">@item.Height</td>
				<td class="item_link">@item.Url</td>
				<td class="item_link">@item.CreateDate.ToString()</td>
				<td class="item_link">@item.UpdateDate.ToString()</td>
				<td><a class="modify_product" href="javascript:void();">修改</a>&nbsp;&nbsp;<a class="delete_product" href="javascript:void();">删除</a></td>
			</tr>
		}
	</tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">图片添加</h4>
			</div>
			<div class="modal-body">
				<form id="imgAdd" class="form-horizontal" action="~/Image/Upload" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<input id="productId" name="productId" type="hidden" value="@ViewBag.Pid" />
						@*<div class="col-sm-10">
							<select id="add_modify_type">
								<option value="1" selected="selected">文胸</option>
								<option value="2">内裤</option>
							</select>
						</div>*@
						<input type="file" name="file" id="file" />
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				<button id="add_btn" type="button" class="btn btn-primary">上传</button>
			</div>
		</div>
	</div>
</div>

@section scripts{
	<script src="~/Scripts/Admin/image_index.js"></script>
}

